@model IEnumerable<LabSystem2.Models.Order>
@{
    ViewBag.Title = "ResultList";
}


<div>
    <hr />
    <h2 class="manageHeader">Twoje zamówienia</h2>
    <div>

        @if (Model.Any())
        {

            <table id="orders-table">

                @foreach (var order in Model)
                {
                    <tr @if (order.OrderState == LabSystem2.Models.OrderState.New) { <text> class="newOrder" </text> }>
                        <td>
                            <strong>Nr zamówienia: </strong>@order.OrderId
                        </td>
                        <td>
                            <strong>Data rejestracji: </strong>
                            @order.DateCreated.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            <strong>Stan: </strong><br />

                            @if (ViewBag.UserIsLab)
                            {
                                using (Html.BeginForm("ChangeOrderState", "Manage"))
                                {
                                    @Html.HiddenFor(o => order.OrderId)
                                    @Html.EnumDropDownListFor(o => order.OrderState, new { @class = "orderstateddl" })
                                }
                            }
                            else
                            {
                                @Html.DisplayFor(o => order.OrderState)
                            }

                            </td>

                        <td>
                            <strong>Dane wysyłkowe:</strong><br />
                            @order.Customer.NIP<br />
                            @order.Customer.NameAndSurname<br />
                            @order.Customer.Address<br />
                            @order.Customer.City<br />
                        </td>
                        <td>
                            <strong>Uwagi: </strong><br />
                            @order.Comment
                        </td>
                        <td>
                            <strong>Łączny koszt:</strong> @order.TotalPrice zł
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <section>
                                <table class="table">
                                    <tr>
                                        <th>
                                            Przedmiot badań
                                        </th>
                                        <th>
                                            Ilość prób
                                        </th>
                                        <th>
                                            Cena jednostkowa
                                        </th>
                                    </tr>
                                    @foreach (var orderItem in order.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.Product.ProductTitle)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.UnitPrice)
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </section>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6"></td>
                    </tr>
                    <tr>
                        <td colspan="6">
                            <section>
                                <table class="table">
                                    <tr>
                                        <th>
                                            Numer próbki
                                        </th>
                                        <th>
                                            pH
                                        </th>
                                        <th>
                                            Fosfor
                                        </th>
                                        <th>
                                            Potas
                                        </th>
                                        <th>
                                            Magnez
                                        </th>
                                        <th>
                                            Inne Badania
                                        </th>
                                        <th>
                                            Mangan
                                        </th>
                                        <th>
                                            Żelazo
                                        </th>
                                        <th>
                                            Miedź
                                        </th>
                                        <th>
                                            Cynk
                                        </th>
                                        <th>
                                            Bor
                                        </th>
                                    </tr>
                                    @foreach (var orderItem in order.ResultsOfOrderGRList)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.OrderMarkingSample)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.WynikiBadanpH)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.WynikiBadanFosfor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.WynikiBadanPotas)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.WynikiBadanMagnez)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.InneBadania)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.Mn)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.Fe)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.Cu)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.Zn)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => orderItem.Bor)
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </section>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6"></td>
                    </tr>
                    <tr>
                        <td colspan="6"></td>
                    </tr>
                    <!-- Next order -->

                }


            </table>
        }
        else
        {
            <div style="text-align: center; margin-top: 50px; margin-bottom: 50px;">
                Brak zamówień.
            </div>
        }
    </div>



</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script>
    $(".orderstateddl").on('change', function (e) {
        //e.preventDefault();

        var f = $(this.form);
        var tr = f.closest("tr");

        var action = f.attr("action");
        var serializedForm = f.serialize();
        $.post(action, serializedForm).done(function (data) {
            if (data == '@LabSystem2.Models.OrderState.New.ToString()') {
                tr.addClass("newOrder")
            }
            else {
                tr.removeClass("newOrder");
            }
          });
    });
    </script>
}