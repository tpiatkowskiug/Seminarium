                    @Html.DisplayFor(modelItem => item.Employee.NameAndSurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderItem.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderItem.Product.ProductTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderItem.Product.PriceBrutto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderItem.UnitPrice)
                </td>
