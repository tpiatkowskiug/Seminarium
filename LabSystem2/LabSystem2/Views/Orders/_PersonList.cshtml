@model IEnumerable<LabSystem2.Models.Order>

@{
    ViewBag.Title = "_PersonList";
}

<div id="personlist-section">

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.NameAndSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItem.Genre.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItem.Product.ProductTitle)
            </th>
